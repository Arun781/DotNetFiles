@model ASPNETMVCCRUD.Models.AddEmployeeViewModel
<h1>Add Employee</h1>
<form method="post" asp-action="Add" class="mt-5">
  <div class="mb-3">
    <label for="" class="form-label">Name</label>
    <input type="text" class="form-control" id="Name" asp-for="Name" name="Name"></div>
    
  <div class="mb-3">
    <label for="" class="form-label">Email</label>
    <input type="email" class="form-control" asp-for="Email" id="Email">
  </div>
  <div class="mb-3">
    <label class="form-check-label" for="Salary">Salary</label>
<input type="text" class="form-control" asp-for="Salary" id="Salary">
  </div>
  <div class="mb-3">
    <label class="form-check-label" for="DateOfBirth">DateofBirth</label>
<input type="Date" class="form-control" asp-for="DateOfBirth" id="DateOfBirth">
  </div>
  <div class="mb-3">
    <label class="form-check-label" for="Department">Department</label>
<input type="text" class="form-control" asp-for="Department" id="Department">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
