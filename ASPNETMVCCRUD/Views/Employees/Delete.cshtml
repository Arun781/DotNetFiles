@model ASPNETMVCCRUD.Models.UpdateEmployeeViewModel
<h1>Update Employee</h1>
<form method="post" asp-action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="id" readonly>
    </div>
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" id="Name">
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" id="Email">
    </div>
    <div class="mb-3">
        <label class="form-check-label" for="Salary">Salary</label>
        <input type="text" class="form-control" asp-for="Salary" id="Salary">
    </div>
    <div class="mb-3">
        <label class="form-check-label" for="DateOfBirth">DateofBirth</label>
        <input type="Date" class="form-control" asp-for="DateOfBirth" id="DataOfBirth">
    </div>
    <div class="mb-3">
        <label class="form-check-label" for="Department">Department</label>
        <input type="text" class="form-control" asp-for="Department" id="Department">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" asp-action="Delete" class="btn btn-danger">Remove</button>
</form>

